APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Use PostgreSQL for production, SQLite for local development
DB_CONNECTION=sqlite
# For PostgreSQL (production):
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=your_database_name
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_spaces_access_key
DO_SPACES_SECRET=your_spaces_secret_key
DO_SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
DO_SPACES_REGION=fra1
DO_SPACES_BUCKET=your_bucket_name
DO_SPACES_URL=https://your-bucket-name.fra1.digitaloceanspaces.com
DO_SPACES_USE_PATH_STYLE_ENDPOINT=false

# AWS SDK Configuration (uses DO Spaces credentials in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# --- AI Configuration ---
PRIMARY_SERVICE=openai
FALLBACK_SERVICE=anthropic

# OpenAI (current models)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_MODEL_CHEAP=gpt-4o-mini
OPENAI_MAX_OUTPUT_TOKENS=900
OPENAI_TIMEOUT=20
OPENAI_BASE=https://api.openai.com/v1

# Anthropic (current models)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_VERSION=2023-06-01
ANTHROPIC_MAX_OUTPUT_TOKENS=900
ANTHROPIC_TIMEOUT=20
ANTHROPIC_BASE=https://api.anthropic.com/v1

# AI Routing & Performance
AI_CHEAP_MAX_INPUT=8000
AI_REASONING_FORCE_HEAVY=true
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_MAX_PAGES_PARALLEL=8
AI_CONTENT_TRIM_ENABLED=true
AI_PARALLEL_ENABLED=true

# OCR Configuration  
TESSERACT_PATH=/opt/homebrew/bin/tesseract
TESSERACT_LANGUAGES=eng
OCR_CONFIDENCE_THRESHOLD=60

# PDF Processing
GHOSTSCRIPT_PATH=/opt/homebrew/bin/gs
POPPLER_PATH=/opt/homebrew/bin
PDF_DPI=300
PDF_MAX_PAGES=100

# Rate Limiting
RATE_LIMIT_OPENAI_REQUESTS_PER_MINUTE=50
RATE_LIMIT_OCR_REQUESTS_PER_MINUTE=100

# Processing Limits
MAX_FILE_SIZE_MB=50
MAX_PROCESSING_TIME_SECONDS=300
MAX_RETRY_ATTEMPTS=3

# Robaws Integration
ROBAWS_BASE_URL=https://api.robaws.com
ROBAWS_API_KEY=your_robaws_api_key_here
ROBAWS_SANDBOX=true
ROBAWS_TIMEOUT=30
ROBAWS_DEFAULT_CLIENT_ID=1

ROBAWS_TIMEOUT=10
ROBAWS_CONNECT_TIMEOUT=5
