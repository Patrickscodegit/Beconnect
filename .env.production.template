# Production Environment Configuration
# Copy this to .env on your production server

APP_NAME="Vehicle Data Extraction"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Production Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=your_production_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Production Cache & Session
SESSION_DRIVER=database
CACHE_STORE=redis
QUEUE_CONNECTION=redis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# Production Storage (MinIO/S3)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your_production_minio_key
AWS_SECRET_ACCESS_KEY=your_production_minio_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_production_bucket
AWS_ENDPOINT=https://your-minio-endpoint.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# AI API Keys - SET THESE ON YOUR PRODUCTION SERVER
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_api_key_here

# AI Configuration
PRIMARY_SERVICE=openai
FALLBACK_SERVICE=anthropic
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_VERSION=2023-06-01
AI_CACHE_ENABLED=true
AI_CONTENT_TRIM_ENABLED=true
AI_PARALLEL_ENABLED=true
AI_CHEAP_MAX_INPUT=8000

# OpenAI Configuration
OPENAI_MODEL=gpt-4o
OPENAI_MODEL_CHEAP=gpt-4o-mini
OPENAI_TIMEOUT=45

# Production OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANGUAGES=eng
OCR_CONFIDENCE_THRESHOLD=60

# Production PDF Processing
GHOSTSCRIPT_PATH=/usr/bin/gs
POPPLER_PATH=/usr/bin
PDF_DPI=300
PDF_MAX_PAGES=100

# Rate Limiting
RATE_LIMIT_OPENAI_REQUESTS_PER_MINUTE=50
RATE_LIMIT_OCR_REQUESTS_PER_MINUTE=100

# Processing Limits
MAX_FILE_SIZE_MB=50
MAX_PROCESSING_TIME_SECONDS=300
MAX_RETRY_ATTEMPTS=3
